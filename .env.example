# This file is an example of environment variables

# Server Configuration
SERVER_PORT=8080
TZ=Asia/Seoul
APP_IMAGE_NAME=wsd-community-app
CONTAINER_NAME_APP=wsd-community-app
CONTAINER_NAME_DB=wsd-community-db
CONTAINER_NAME_REDIS=wsd-community-redis
APP_PORT_HOST=8080
DB_PORT_HOST=3306
REDIS_PORT_HOST=6379

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:mysql://db:3306/wsd_community?useSSL=false&allowPublicKeyRetrieval=true&characterEncoding=UTF-8&serverTimezone=Asia/Seoul
SPRING_DATASOURCE_USERNAME=user
SPRING_DATASOURCE_PASSWORD=password
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=wsd_community
MYSQL_USER=user
MYSQL_PASSWORD=password
MYSQL_IMAGE_TAG=8.0

# JPA Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_PROFILES_ACTIVE=local

# Redis Configuration
SPRING_DATA_REDIS_HOST=redis
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=redis_password
REDIS_IMAGE_TAG=7.0-alpine

# JWT Configuration
JWT_SECRET=your_base64_secret_key_needs_to_be_long_enough
JWT_ACCESS_EXPIRATION_MS=3600000 
JWT_REFRESH_EXPIRATION_MS=604800000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
APP_OAUTH2_REDIRECT_URI_SUCCESS=http://localhost:3000/oauth/callback
APP_OAUTH2_REDIRECT_URI_FAILURE=http://localhost:3000/login?error=true

# Firebase Configuration (JSON Content)
FIREBASE_CONFIG={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}
