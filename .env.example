# App
APP_IMAGE_NAME=community-app
CONTAINER_NAME_APP=community-app
APP_PORT_HOST=8080
SERVER_PORT=8080
TZ=Asia/Seoul

# Spring datasource
SPRING_DATASOURCE_URL=jdbc:mysql://db:3306/community_db?useSSL=false&allowPublicKeyRetrieval=true&characterEncoding=UTF-8&serverTimezone=Asia/Seoul
SPRING_DATASOURCE_USERNAME=community_user
SPRING_DATASOURCE_PASSWORD=community_pass
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_PROFILES_ACTIVE=prod

# Redis
SPRING_DATA_REDIS_HOST=redis
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=redis_secure_pass

# JWT
JWT_SECRET=this_is_a_very_secure_jwt_secret_key_for_testing_purposes_only
JWT_ACCESS_EXPIRATION_MS=3600000
JWT_REFRESH_EXPIRATION_MS=86400000

# CORS
CORS_ALLOWED_ORIGINS=*

# Database (MySQL)
MYSQL_IMAGE_TAG=8.0
CONTAINER_NAME_DB=community-db
DB_PORT_HOST=3306:3306
MYSQL_ROOT_PASSWORD=root_pass
MYSQL_DATABASE=community_db
MYSQL_USER=community_user
MYSQL_PASSWORD=community_pass

# Redis Container
REDIS_IMAGE_TAG=alpine
CONTAINER_NAME_REDIS=community-redis
REDIS_PORT_HOST=6379:6379
